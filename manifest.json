{
  "manifest_version": 2,
  "name": "Github comment form expander",
  "version": "0.1",
  "description": "It will allow to expand the Github comment form.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Github comment form expander"
  }
}
